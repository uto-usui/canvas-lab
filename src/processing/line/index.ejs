          <section class="hero is-bold">
              <div class="hero-body">
                  <div class="container">
                      <h1 class="title">
                          processing.js line
                      </h1>
                      <h2 class="subtitle">
                          random lines
                      </h2>
                  </div>
              </div>
          </section>


          <div class="container">
              <div class="columns">

                  <%- include(path.re +'common/parts/_sidebar', {page:page, path:path}) %>


                  <div class="column is-three-quarters">
